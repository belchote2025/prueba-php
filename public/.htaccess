# Configuración MÍNIMA - confiar completamente en el fallback de PHP
RewriteEngine On

# Desactivar MultiViews
Options -MultiViews

# Permitir SOLO archivos físicos existentes (CSS, JS, imágenes)
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# Permitir acceso a directorios de assets (necesarios para CSS, JS, imágenes)
RewriteCond %{REQUEST_FILENAME} -d
RewriteCond %{REQUEST_URI} ^/public/assets/
RewriteRule ^ - [L]

# BLOQUEAR otros directorios (previene que Apache busque cart/public/index.php)
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [F]

# TODO LO DEMÁS va a index.php
# NO intentar procesar la URL aquí - dejar que el fallback de PHP lo haga
RewriteRule ^ index.php [L,QSA]

# Enable error reporting
php_flag display_errors on
php_value error_reporting E_ALL

# Prevent directory listing
Options -Indexes

# Set default character set
AddDefaultCharset UTF-8

# Protect sensitive files
<FilesMatch "^\.">
    Require all denied
</FilesMatch>

# Handle errors
ErrorDocument 404 index.php?url=error/404
ErrorDocument 500 index.php?url=error/500
