# Versión simplificada del .htaccess para hosting
# Si el .htaccess principal causa problemas, renombra este archivo a .htaccess

# Redirigir solo la raíz a public/index.php
RewriteEngine On
RewriteCond %{REQUEST_URI} ^/$
RewriteRule ^$ public/index.php [L]

# Permitir acceso a archivos PHP
<Files "*.php">
    Require all granted
</Files>

